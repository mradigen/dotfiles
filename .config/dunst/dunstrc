[global]
    offset = 20x60
    separator_height = 1

	# Frame
    frame_width = 2
    frame_color = "#d67ff0"

	# Text
    font = Iosevka 10
    alignment = center

	# Mouse actions
    mouse_left_click = close_current
    mouse_middle_click = close_all
    mouse_right_click = do_action
	
	# Actions
	show_indicators = false

	transparency = 50

[urgency_low]
    background = "#0f1212"
    foreground = "#E9E9E9"
    timeout = 5
    # Icon for notifications with low urgency, uncomment to enable
    #default_icon = /path/to/icon

[urgency_normal]
    background = "#0f1212"
    foreground = "#E9E9E9"
    timeout = 10
    # Icon for notifications with normal urgency, uncomment to enable
    #default_icon = /path/to/icon

[urgency_critical]
    background = "#0f1212"
    foreground = "#E9E9E9"
