# BSPWM Hotkeys/keybindings

###---Launch stuff---###

alt+f
	bspc node `cat $HOME/.cache/scratchpad | head -1` --focus

# Help
super + shift + h
	awk '/^[a-z]/ && last \{print $0,"\t",last\} \{last=""\} /^#/\{last=$0\}' ~/.config/sxhkd/sxhkdrc | column -t -s $'\t' | run_dmenu -d

# Terminal Emulator
super + c
	alacritty

# Web Browser
super + v
	vivaldi-stable --profile-directory="Default"
	#qutebrowser

# File Browser
super + x
	alacritty --title=Ranger -e ranger ~/.config

# Music Player
super + z
	alacritty --class=Music -e 'mocp'

# Dmenu {Applications, Themes, Clipboard}
super + {f, t, h}
	run_dmenu -{ ,t,c}

# Switch desktops on secondary monitor
super + g
	if [[ `bspc query --desktops --monitor \^2 --desktop focused --names` = 6 ]]; then \
        bspc desktop -f 7; \
    else \
        bspc desktop -f 6; \
    fi

# Alsamixer
super + m
	alacritty --class=Alsamixer -e 'alsamixer'

# Scratchpad
super + r
	scratchpad
#	scratchpad-old discord "apulse discord"

# Screenshot
Print
	screenshot

######------------######

###---Keybinds---###

# Quit application {Focused, xkill}
super + {_,shift + }q
	{bspc node -c,xkill}

# Restart BSPWM
super + shift + r
	bspc wm -r

# Exit BSPWM
super + shift + x
	bspc quit

######------------######

###---Moving Around---###

# Switch between recently focused windows
super + Tab
	bspc node last --focus

# Focus on window in selected direction
super + {a,s,w,d}
	bspc node -f {west,south,north,east}

# Move focused window in chain mode
super + shift + s : {a,s,w,d}
	bspc node -s {west,south,north,east}

# Switch to selected desktop
super + {1-9,0}
	bspc desktop -f '^{1-9,10}'

# Move window to selected desktop
super + shift + {1-9,0}
	id=$(bspc query -N -n); bspc node -d ^{1-9,10}; bspc node -f ${id}

### Never going to use the resizing anyways cause right click resize is better
# Resize focused window in chain mode
super + ctrl + s : {a,s,w,d}
    STEP=20; SELECTION={1,2,3,4}; \
    bspc node -z $(echo "left -$STEP 0,bottom 0 $STEP,top 0 -$STEP,right $STEP 0" | cut -d',' -f$SELECTION) || \
    bspc node -z $(echo "right -$STEP 0,top 0 $STEP,bottom 0 -$STEP,left $STEP 0" | cut -d',' -f$SELECTION)

super + {_,shift +}e
	{bspc desktop -l next, bspc node -t \~fullscreen}

# Hide polybar
super + shift + f
	pbtoggle

# Toggle floating
super + space
	if [ -z "$(bspc query -N -n focused.floating)" ]; then \
        bspc node focused -t floating; \
    else \
        bspc node focused -t tiled; \
    fi

# Toggle pseudo-tiled
super + alt + space
	if [ -z "$(bspc query -N -n focused.pseudo_tiled)" ]; then \
        bspc node focused -t pseudo_tiled; \
    else \
        bspc node focused -t tiled; \
    fi

######-------------######

###---Extras---###

{XF86AudioRaiseVolume,XF86AudioLowerVolume}
	sound {increase,decrease}

{XF86AudioMute,XF86AudioMicMute}
	sound mic

{XF86MonBrightnessUp,XF86MonBrightnessDown} 
	{brightness 5 & dunstify -t 500 -u low -r "92813" "Brightness: $(cat /sys/class/backlight/intel_backlight/brightness)", brightness -5 & dunstify -t 500 -u low -r "92813" "Brightness: $(cat /sys/class/backlight/intel_backlight/brightness)"}

XF86Display
	desk

super + Escape
	dunstctl history-pop

super + {_,shift +}b
	{blurlock, blurlock; sudo systemctl suspend}

~ctrl + Page_Down
	fsg
	#rsg-sw
	#ssg

~alt + s
	multi-macro

~alt + d
	curl "http://localhost:5000/seed" -d seed=rsg
	#curl "http://localhost:5000/fsg"
