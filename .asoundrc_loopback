#pcm.!default {
#	type plug
#    slave.pcm "hw:PCH,0,0"
#    slave.pcm "hw:Loopback,0,0"
#}

pcm.quad {
    type multi
    slaves.a.pcm "hw:PCH,0"
    slaves.a.channels 2
    slaves.b.pcm "hw:Loopback,0"
    slaves.b.channels 2
    bindings.0 { slave a; channel 0; }
    bindings.1 { slave a; channel 1; }
    bindings.2 { slave b; channel 0; }
    bindings.3 { slave b; channel 1; }
}
pcm.stereo2quad {
    type route
    slave.pcm "quad"
    ttable.0.0 1
    ttable.1.1 1
    ttable.0.2 1
    ttable.1.3 1
}
pcm.!default {
    type asym
    playback.pcm "plug:stereo2quad"
    capture.pcm "hw:PCH,0"
}
