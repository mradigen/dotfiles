#! /bin/sh

# scrot='scrot -s'
scrot='maim -squl -b 3 -c 0.8,0.6,0.9,0.3'
notifier='dunstify'
filenameFormat='%Y-%m-%d-%T.png'
fileLoc="$HOME/Pictures/Screenshots/$(date +${filenameFormat})"

${scrot} | xclip -selection clipboard -t image/png -i &&
save=`${notifier} -t 5000 -r '12345' Screenshot "Copied to clipboard!<br><b>Right click to save</b>" -A "yes, "`

if [[ ${save} = "yes" ]]; then
	xclip -selection clipboard -o > ${fileLoc}
fi
