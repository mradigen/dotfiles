#!/bin/bash
# /usr/bin/blurlock

## take screenshot
icon="$HOME/Pictures/adigen.png"
import -window root /tmp/screenshot.png

## blur it
convert /tmp/screenshot.png -scale 10% -scale 1000% $icon -gravity center -composite -matte /tmp/screenshotblur.png
rm /tmp/screenshot.png

#---- NEW SHORT METHOD
#modified-scrot -B 6 -i $icon /tmp/screenshotblur.png
i3lock -i /tmp/screenshotblur.png
exit 0
