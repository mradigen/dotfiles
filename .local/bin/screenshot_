#! /bin/sh

# scrot='modified-scrot'
scrot='maim -squl -b 3 -c 0.8,0.6,0.9,0.3'
notifier='dunstify'
filenameFormat='%Y-%m-%d-%T.png'
fileLoc="$HOME/Pictures/Screenshots/$(date +${filenameFormat})"

$scrot ${fileLoc} &&
xclip -selection clipboard -t image/png -i ${fileLoc} &&
$notifier -t 3000 -r '12345' -i ${fileLoc} Screenshot "Saved and copied to clipboard!"
