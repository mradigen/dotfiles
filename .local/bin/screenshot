#! /bin/sh

# scrot='scrot -s'
scrot='maim -squl -b 3 -c 0.8,0.6,0.9,0.3'
notifier='dunstify'
filenameFormat='%Y-%m-%d-%T.png'
fileSaveLoc="$HOME/Pictures/Screenshots/$(date +${filenameFormat})"
fileCacheLoc="/tmp/screenshot_cache_temp.png"

${scrot} ${fileCacheLoc} &&
xclip -selection clipboard -t image/png -i ${fileCacheLoc} &&
save=`${notifier} -t 5000 -r '12345' Screenshot "Copied to clipboard!<br><b>RIGHT CLICK TO SAVE</b>" -i ${fileCacheLoc} -A "yes, "`

if [[ ${save} = "yes" ]]; then
	xclip -selection clipboard -o > ${fileSaveLoc}
	${notifier} -t 3000 -r '12345' Screenshot "Saved to ${fileSaveLoc}!"
fi

# Conditional delete
#case ${save} in
#	"yes")	xclip -selection clipboard -o > ${fileSaveLoc}
#		;;
#	"1")	exit 0 # Don't delete if the user didn't take action
#		;;
#esac
#rm ${fileCacheLoc} # Delete the cached file if it made this far
