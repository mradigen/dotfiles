###---Launch stuff---###

alt+f
	bspc node `cat $HOME/.cache/scratchpad | head -1` --focus

# Terminal Emulator
super + c
	alacritty

# Web Browser
super + v
	vivaldi-stable --profile-directory="Default"
	#qutebrowser

# File Browser
super + x
	alacritty --title=Ranger -e ranger ~/.config

# Music Player
super + z
	alacritty --class=Music -e 'mocp'

# Dmenu
super + {f, t, h}
	run_dmenu -{ ,t,c}

# Program Launcher
#~super + f
	#rofi -show drun

# Theme switcher
#super + t
	#rofigen $HOME/.config/rofi/menus/theme-switcher

# Clipboard
#super + h
	#rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

# Switch desktops on secondary monitor
super + g
	if [[ `bspc query --desktops --monitor \^2 --desktop focused --names` = 6 ]]; then \
        bspc desktop -f 7; \
    else \
        bspc desktop -f 6; \
    fi

# Alsamixer
super + m
	alacritty --class=Alsamixer -e 'alsamixer'

# nlyt dir
super + n
	alacritty --title=nlyt -e ranger ~/Desktop/nlyt/

# Scratchpad
super + r
	scratchpad
#	scratchpad-old discord "apulse discord"

# Screenshot
Print
	screenshot
#	flameshot gui -p ~/Pictures/Screenshots

######------------######

###---Keybinds---###

# Quit application
#super + {_,shift + }q
#	bspc node -{c,k}
super + {_,shift + }q
	{bspc node -c,xkill}

# Restart BSPWM
super + shift + r
	bspc wm -r

# Exit BSPWM
super + shift + x
	bspc quit

######------------######

###---Moving Around---###

# Switch between nodes
super + Tab
	bspc node last --focus
#	bspc node -f next.local

# Focus or move
super + {_,shift + }{a,s,w,d}
	bspc node -{f,s} {west,south,north,east}

super + {1-9,0}
	bspc desktop -f '^{1-9,10}'

super + shift + {1-9,0}
	id=$(bspc query -N -n); bspc node -d ^{1-9,10}; bspc node -f ${id}

### Never going to use the resizing anyways cause right click resize is better
# Expand a window from the outsides
super + ctrl + {a,s,w,d}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Expand a window from the insides
super + ctrl + shift + {a,s,w,d}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

super + {_,shift +}e
	{bspc desktop -l next, bspc node -t \~fullscreen}

# Hiding polybar
super + shift + f
	pbtoggle

# Floating Windows
super + space
#	bspc node focused -t "~floating"
	if [ -z "$(bspc query -N -n focused.floating)" ]; then \
        bspc node focused -t floating; \
    else \
        bspc node focused -t tiled; \
    fi

super + alt + space
	if [ -z "$(bspc query -N -n focused.pseudo_tiled)" ]; then \
        bspc node focused -t pseudo_tiled; \
    else \
        bspc node focused -t tiled; \
    fi

