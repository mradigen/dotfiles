#! /bin/sh

# scrot='modified-scrot'
scrot='scrot -sfz'
notifier='dunstify'
filenameFormat='%Y-%m-%d-%T.png'
filenameToSave=`date +$filenameFormat`
screenshotDir="$HOME/Pictures/Screenshots/"

$scrot ${screenshotDir}${filenameToSave} &&
$notifier -t 1000 -r '12345' "Screenshot saved in ${screenshotDir}!" &&

xclip -selection clipboard -t image/png -i ${screenshotDir}${filenameToSave} &&
$notifier -t 1000 -r '12346' "Screenshot successfully copied to clipboard!"
