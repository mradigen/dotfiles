[global]
    offset = 20x60
    separator_height = 1

	# Frame
    frame_width = 2
    frame_color = "#059DE2"

	# Text
    font = Iosevka 10
    alignment = center

	# Mouse actions
    mouse_left_click = close_current
    mouse_middle_click = close_all
    mouse_right_click = do_action
	
	# Actions
	show_indicators = false

	#transparency = 60

