[global]
    offset = (20, 60)
    separator_height = 1

	# Frame
    frame_width = 2
    frame_color = "#A7A297"

	# Text
    font = Iosevka 10
    alignment = center

	# Mouse actions
    mouse_left_click = close_current
    mouse_middle_click = close_all
    mouse_right_click = do_action
	
	# Actions
	show_indicators = false
    highlight = "#d6d5d5"

	transparency = 50

[urgency_low]
    background = "#141512"
    foreground = "#d6d5d5"
    timeout = 5
    # Icon for notifications with low urgency, uncomment to enable
    #default_icon = /path/to/icon

