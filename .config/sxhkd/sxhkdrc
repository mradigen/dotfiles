# BSPWM Hotkeys/keybindings

##################
## Applications ##
##################


super + n
	xcolor -s

# Help
super + question
	awk '/^[a-z]/ && last \{print $0,"\t",last\} \{last=""\} /^#/\{last=$0\}' ~/.config/sxhkd/sxhkdrc | column -t -s $'\t' | run_dmenu -d

# Terminal Emulator
super + c
	alacritty

# Web Browser
super + v
	open-or-switch-to vivaldi-stable vivaldi-stable --profile-directory="Default"

# File Browser
super + x
	open-or-switch-to ranger alacritty --title=Ranger -e ranger ~/.config

# Music Player
super + z
	scratchpad-old "youtube music" youtube-music
	# youtube-music
	#alacritty --class=Floating -e 'mocp'

# Dmenu {Applications, Themes, Clipboard}
#super + {f, t, h}
#	run_dmenu -{ ,t,c}

# Rofi {Applications, Themes, Clipboard}
super + {f, t, g}
	~/.config/rofi/launcher.sh {'',theme,clipboard}

# Dmenu File manager
#super + shift + d
#	FM_OPENER=rifle dmenufm -m 'run_dmenu -d'

# Alsamixer
super + m
	alacritty --class=Floating -e 'alsamixer'

# Scratchpad
super + r
	scratchpad-tiles toggle ~/.config/scratchpad/mainrc
	# scratchpad

# # Scratchpad Discord
# super + d
# 	scratchpad-old discord discord
#
