defaults.pcm.card 1
defaults.ctl.card 1

pcm.!default {
  type asym
  playback.pcm "OutputSpliter"
  capture.pcm "dsnoop"
}

pcm.OutputSpliter {
  type plug
  slave.pcm mdev
  route_policy "duplicate"
}

pcm.mdev {
  type multi
  slaves.a.pcm pcm.MixSpeaker
  slaves.a.channels 2
  slaves.b.pcm pcm.MixLoopback
  slaves.b.channels 2
  bindings.0.slave a
  bindings.0.channel 0
  bindings.1.slave a
  bindings.1.channel 1
  bindings.2.slave b
  bindings.2.channel 0
  bindings.3.slave b
  bindings.3.channel 1
}


pcm.MixSpeaker {
  type dmix
  ipc_key 1024
  slave.pcm "hw:PCH,0"
}

pcm.MixLoopback {
  type dmix
  ipc_key 1025
  slave.pcm "hw:Loopback,0,0"
}
